<div class="card">

<div class="titrepassword center">Forgot your password ?</div>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs titres_petit">
    <%= f.input :email, label: false,  placeholder: "Email",
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
  </div>

  <div class="form-actions button1 center">
    <%= f.button :submit, "SEND A EMAIL" %>
  </div>
<% end %>
<div class="center surcouche">
<%= render "devise/shared/links" %>
</div>
</div>

